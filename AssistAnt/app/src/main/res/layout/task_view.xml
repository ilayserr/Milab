<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_remaining"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/difficulty_level_header"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="Difficulty level"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar_difficulty"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="126dp"
            android:layout_height="15dp"
            android:progress="70"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/difficulty_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/estimate_time_header"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="Estimate time"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar_estimate"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="126dp"
            android:layout_height="15dp"
            android:progress="25"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/estimate_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2.7"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/already_finish_header"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="Already finish"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar_finish"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="126dp"
            android:layout_height="15dp"
            android:progress="7"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/finish_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="17/120"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>