<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assistant.MainActivityFragment"
    android:background="@drawable/home_screen"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="439dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/seekBar_luminosite"
                android:layout_marginStart="12dp"
                android:layout_marginTop="23dp"
                android:text="Hey Tom,"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_tasks"
                android:layout_width="136dp"
                android:layout_height="63dp"
                android:layout_alignStart="@+id/textView_grade"
                android:layout_below="@+id/textView_name"
                android:layout_marginStart="11dp"
                android:layout_marginTop="49dp"
                android:fontFamily="casual"
                android:lineSpacingExtra="18sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_up_next"
                android:layout_width="208dp"
                android:layout_height="63dp"
                android:layout_below="@+id/textView_tasks"
                android:layout_marginTop="57dp"
                android:layout_toEndOf="@+id/free"
                android:fontFamily="casual"
                android:lineSpacingExtra="5sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_grade"
                android:layout_width="136dp"
                android:layout_height="63dp"
                android:layout_above="@+id/free"
                android:layout_alignStart="@+id/free"
                android:layout_marginStart="19dp"
                android:fontFamily="casual"
                android:lineSpacingExtra="18sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/busy"
                android:layout_width="44dp"
                android:layout_height="25dp"
                android:layout_above="@+id/seekBar_luminosite"
                android:layout_alignEnd="@+id/seekBar_luminosite"
                android:text="Busy"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="557dp" />

            <TextView
                android:id="@+id/free"
                android:layout_width="44dp"
                android:layout_height="25dp"
                android:layout_above="@+id/seekBar_luminosite"
                android:layout_alignStart="@+id/textView_name"
                android:text="Free"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBar_luminosite"
                android:layout_width="351dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/custom_thumb" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="368dp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="16dp" />


        </RelativeLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
