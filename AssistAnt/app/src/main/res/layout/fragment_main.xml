<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen"
    tools:context="com.example.assistant.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="38dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_tasks"
                android:layout_width="136dp"
                android:layout_height="63dp"
                android:layout_alignBaseline="@+id/button_tasks_page"
                android:layout_alignBottom="@+id/button_tasks_page"
                android:layout_alignStart="@+id/button_up_next_page"
                android:fontFamily="casual"
                android:lineSpacingExtra="18sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_up_next"
                android:layout_width="280dp"
                android:layout_height="63dp"
                android:layout_alignBaseline="@+id/button_up_next_page"
                android:layout_alignBottom="@+id/button_up_next_page"
                android:layout_alignStart="@+id/button_up_next_page"
                android:fontFamily="casual"
                android:lineSpacingExtra="5sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <Button
                android:id="@+id/button_tasks_page"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/textView_tasks"
                android:layout_below="@+id/textView_name"
                android:layout_marginTop="85dp"
                android:src="@drawable/button_tasks_page" />

            <Button
                android:id="@+id/button_up_next_page"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/textView_name"
                android:layout_below="@+id/button_tasks_page"
                android:layout_marginStart="24dp"
                android:src="@drawable/button_tasks_page" />

            <Button
                android:id="@+id/button_recent_tasks_page"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/button_up_next_page"
                android:layout_below="@+id/textView_up_next"
                android:src="@drawable/button_tasks_page" />


        </RelativeLayout>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>
