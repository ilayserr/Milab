    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="23dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_tasks"
                android:layout_width="136dp"
                android:layout_height="63dp"
                android:layout_alignEnd="@+id/textView_name"
                android:layout_below="@+id/textView_name"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="60dp"
                android:fontFamily="casual"
                android:lineSpacingExtra="18sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_up_next"
                android:layout_width="250dp"
                android:layout_height="63dp"
                android:layout_alignStart="@+id/textView_grade"
                android:layout_below="@+id/textView_tasks"
                android:layout_marginStart="10dp"
                android:layout_marginTop="68dp"
                android:fontFamily="casual"
                android:lineSpacingExtra="5sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_grade"
                android:layout_width="136dp"
                android:layout_height="63dp"
                android:layout_alignEnd="@+id/textView_tasks"
                android:layout_below="@+id/textView_up_next"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="36dp"
                android:fontFamily="casual"
                android:lineSpacingExtra="18sp"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/button_tasks_page"
                android:layout_width="98dp"
                android:layout_height="128dp"
                android:layout_alignEnd="@+id/textView_name"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:src="@drawable/button_tasks_page" />


